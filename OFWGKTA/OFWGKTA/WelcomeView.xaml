<UserControl x:Class="OFWGKTA.WelcomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="480" Width="640">
    <StackPanel>
        <Label Margin="5" HorizontalAlignment="Center" FontWeight="Bold" FontSize="20">OFWGKTA</Label>
        <Label Margin="5">Select application mode:</Label>
        <ListBox Margin="5" MinHeight="100" ItemsSource="{Binding ApplicationModes}" SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}" />
        <Button Margin="5" Width="100" Command="{Binding ContinueCommand}">Continue</Button>
    </StackPanel>
</UserControl>
